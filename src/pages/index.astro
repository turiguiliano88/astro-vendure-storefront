---
import Base from '../layouts/base.astro';
import App from '../components/home'
import { getProducts, getActiveCustomer, getActiveOrder, getCollectionsShort } from '../api/server';

const data = await getProducts(10);
const products = data.products;

const collections = (await getCollectionsShort()).collections;


---

<Base title="Home">
<App client:load products={products} collections={collections} />
</Base>